#!/bin/bash
# Restart the development server cleanly

echo "Killing zombie uvicorn processes..."
pkill -9 -f "uvicorn app.main:app" 2>/dev/null
sleep 1

echo "Stopping any existing servers on port 7007..."
lsof -ti:7007 | xargs -r kill -9 2>/dev/null
sleep 1

echo "Verifying port 7007 is free..."
if lsof -ti:7007 >/dev/null 2>&1; then
    echo "ERROR: Port 7007 still in use after cleanup"
    exit 1
fi

echo "Starting server on port 7007..."
cd /mnt/Projects/quantum-pools
source venv/bin/activate
uvicorn app.main:app --reload --port 7007 --host 0.0.0.0
